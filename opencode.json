{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": {
      "*": "allow",
      "AGENTS.md": "ask",
      "*/AGENTS.md": "ask",
      ".opencode/*": "ask",
      "opencode.json": "ask"
    },
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git add*": "allow",
      "git commit*": "ask",
      "git push*": "deny",
      "rm *": "deny"
    }
  },

  "agent": {
    "build": {
      "permission": {
        "edit": {
          "*": "allow",
          "AGENTS.md": "ask",
          "*/AGENTS.md": "ask",
          ".opencode/*": "ask",
          "opencode.json": "ask"
        }
      }
    }
  }
}

